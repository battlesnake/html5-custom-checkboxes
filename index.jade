doctype html

html
	head
		meta(charset='utf8')
		title Custom checkbox using only CSS
		link(rel='stylesheet', href='style.css')
	body
		h2 Check box
		label
			input(type='checkbox', class='et')
			span Tere
		label
			input(type='checkbox', class='lt')
			span Sveiki
		label
			input(type='checkbox', class='ro')
			span Salut
		label
			input(type='checkbox', class='de')
			span Guten tag
		label
			input(type='checkbox', class='fr')
			span Bonjour
		hr
		h2 Radio box
		label
			input(type='radio', name='radioboxes', class='et')
			span Tere
		label
			input(type='radio', name='radioboxes', class='lt')
			span Sveiki
		label
			input(type='radio', name='radioboxes', class='ro')
			span Salut
		label
			input(type='radio', name='radioboxes', class='de')
			span Guten tag
		label
			input(type='radio', name='radioboxes', class='fr')
			span Bonjour
